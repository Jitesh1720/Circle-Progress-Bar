<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shrikanthravi.circleprogressbar.MainActivity">

    <com.shrikanthravi.circleprogressbar.CircleProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/circleProgressBar"

        app:progress="25"
        app:Thickness="15dp"
        app:Color="@color/colorPrimary"
        android:layout_centerVertical="true"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleProgressBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/progressSeekBar"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressSeekBar"
        android:layout_margin="10dp"
        android:id="@+id/switchStickman"
        android:layout_centerHorizontal="true"
        android:text="Show StickMan  "
        android:padding="5dp"/>
</RelativeLayout>
